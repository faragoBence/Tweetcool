<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="3.0">

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>
        </jsp-property-group>
    </jsp-config>
    <!--
        In earlier versions (like version 2.x) of the Java Servlet API
        servlets, filters, etc. needed to be configured here, in the web.xml
        file (web deployment descriptor), but since version 3.x every configuration
        can be defined instead with annotations. For more search for information on
        "differences between java servlet api 2 and 3", etc.
    -->
</web-app>
